<div class="answers-list">
  {{#each}}
    <div class="answer" {{bind-attr id=itemId}}>
      {{#if isEditing}}
        <div class="answer-form">
          {{#form-for controller action='save'}}
            <div class="row">
              <div class="small-12 columns">
                {{input body as="text"}}
              </div>
            </div>
            <div class="row">
              <div class="small-6 columns">
                {{submit 'Save' class='button success expand'}}
              </div>
              <div class="small-6 columns">
                <button class="button secondary expand "{{action 'cancel'}}>Cancel</button>
              </div>
            </div>
          {{/form-for}}
        </div>
      {{else}}
        <div class="answer__body">
          {{format-markdown body}}
        </div>
      {{/if}}

      <div class="row">
        <div class="small-6 columns">
          <div class="post-actions">
            {{#if canEdit}}
              <a class="answer-actions__edit button secondary tiny"
                href="#" {{action 'edit'}}>Edit</a>
            {{/if}}
          </div>
        </div>
        <div class="small-6 columns">
          <div class="answer__author text-right">
            <p>- @{{user.username}}</p>
          </div>
        </div>
      </div>

      {{render 'comments.list' comments}}

      {{#if isCommenting}}
        {{render 'comments.new'}}
      {{/if}}
    </div>

    <hr>
  {{/each}}
</div>
