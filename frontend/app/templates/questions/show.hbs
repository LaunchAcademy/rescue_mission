<div class="question">
  <div class="question__author">
    <p>{{user.username}} asked:</p>
  </div>

  {{#if isEditing}}
    <div class="question-form">
      {{#form-for controller action='save'}}
        <div class="row">
          <div class="small-12 columns">
            {{input title placeholder="Deploying Rails app to Heroku"}}
          </div>
        </div>
        <div class="row">
          <div class="small-12 columns">
            {{input body as='text' placeholder='Provide as many details as possible'}}
          </div>
        </div>
        <div class="row">
          <div class="small-6 columns">
            {{submit "Save" class="button success expand"}}
          </div>
          <div class="small-6 columns">
            <a href="#" class="button secondary expand" {{action 'cancel'}}>
              Cancel
            </a>
          </div>
        </div>
      {{/form-for}}
    </div>
  {{else}}
    <h1 class="page-title">{{title}}</h1>

    <div class="question__body">
      <p>{{body}}</p>
    </div>

    <div class="post-actions">
      {{#if canEdit}}
        <a class="post-action--edit" href="#" {{action 'toggleIsEditing'}}>Edit</a>
      {{/if}}
    </div>
  {{/if}}
</div>

<h2>Answers</h2>

<div class="answer-list">
  {{#each answers}}
    <div class="answer">
      <div class="answer__author">
        <h4>@{{user.username}} said:</h4>
        <p>{{body}}</p>
      </div>
    </div>
  {{/each}}
</div>
